<h1>Hair Salon</h1>

#if($stylists.size() > 0)
#foreach ($stylist in $stylists)
  <p><a href="/stylist/$stylist.getId()">$stylist.getName()</a></p>
#end

#else
  <p>No stylists at this time</p>
#end

<h2>Add a Stylist</h2>
<form action="/" method="post">
  <label for="name">Stylist Name</label>
  <input id="name" name="name" type="text">

  <div>
    <button type="submit" class="btn btn-info">Add Stylist</button>
  </div>
</form>
